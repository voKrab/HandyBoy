<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbarContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:animateLayoutChanges="true"
        android:background="@color/red" >

        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/bank_account"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:padding="8dp"
            android:src="@drawable/back_icon_topbar" />

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backImageView"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/firstEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                        android:ems="10"
                        android:hint="@string/first"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/lastNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                        android:ems="10"
                        android:hint="@string/last"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_number"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/accountNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890"
                        android:ems="10"
                        android:hint="@string/number"
                        android:inputType="number"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/routing_number"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/routingNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890"
                        android:ems="10"
                        android:hint="@string/number"
                        android:inputType="number"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_ssn_digits"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/ssnNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890"
                        android:ems="10"
                        android:hint="xxxx"
                        android:inputType="number"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/you_home_address"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/address"
                        android:textColor="@color/dark_blue_pressed"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/addressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/grey_rect"
                        android:gravity="center_vertical"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:singleLine="true"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="84dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/address_city_field_title"
                        android:textColor="@color/dark_blue_pressed"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/cityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/grey_rect"
                        android:gravity="center_vertical"
                        android:hint="@string/address_city_field_hint"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:singleLine="true"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/license_state"
                        android:textColor="@color/dark_blue_pressed"
                        android:textSize="10sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                            android:id="@+id/stateSpinner"
                            android:layout_width="84dp"
                            android:layout_height="34dp"
                            android:background="@drawable/spinner_selector" />

                        <TextView
                            android:id="@+id/stateTextView"
                            android:layout_width="50dp"
                            android:layout_height="34dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_white_background_selector"
                            android:ems="10"
                            android:gravity="center"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:textColor="@color/dark_blue"
                            android:textColorHint="@color/text_hint"
                            android:textSize="13sp" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/zip"
                        android:textColor="@color/dark_blue_pressed"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/zipEditText"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/grey_rect"
                        android:gravity="center_vertical"
                        android:hint="@string/zip"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:singleLine="true"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="221dp"
                android:layout_height="34dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dark_blue_shape_selector"
                android:gravity="center"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>