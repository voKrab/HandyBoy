<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:padding="8dp"
                    android:src="@drawable/back_icon_topbar" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    android:id="@+id/backTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:customFont="BOLD_ITALIC" />

            </LinearLayout>


            <com.vallverk.handyboy.view.base.TextViewPlus
                app:customFont="BOLD"
                android:id="@+id/screenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="21sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_red"></LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <com.vallverk.handyboy.view.base.TextViewPlus
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="21dp"
                android:text="@string/whats_your_name"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                app:customFont="SEMIBOLD" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal">

                <com.vallverk.handyboy.view.base.EditTextPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/firstEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_selector"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                    android:ems="10"
                    android:hint="@string/first"
                    android:inputType="text"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="13sp">

                    <requestFocus />
                </com.vallverk.handyboy.view.base.EditTextPlus>

                <com.vallverk.handyboy.view.base.EditTextPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/lastEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_selector"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                    android:ems="10"
                    android:hint="@string/last"
                    android:inputType="text"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.vallverk.handyboy.view.base.TextViewPlus
                app:customFont="SEMIBOLD"
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="21dp"
                android:text="@string/whats_your_email"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                 />

            <com.vallverk.handyboy.view.base.EditTextPlus
                app:customFont="SEMIBOLD"
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/email_edit_text_selector"
                android:ems="10"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="13sp" />

            <com.vallverk.handyboy.view.base.TextViewPlus
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="21dp"
                android:text="@string/what_password_would_you_like_to_use"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                app:customFont="SEMIBOLD" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vallverk.handyboy.view.base.EditTextPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/password_edit_text_selector"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/eyeButton"
                    android:layout_width="34dp"
                    android:layout_gravity="right"
                    android:layout_height="34dp"></View>

            </FrameLayout>



            <com.vallverk.handyboy.view.base.TextViewPlus
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="21dp"
                android:text="@string/how_old_are_you"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                app:customFont="SEMIBOLD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vallverk.handyboy.view.base.TextViewPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/monthTextView"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:background="@drawable/edit_text_selector"
                    android:gravity="center"
                    android:hint="MM"
                    android:textSize="13sp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:text="/"
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/dayTextView"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:background="@drawable/edit_text_selector"
                    android:gravity="center"
                    android:hint="DD"
                    android:textSize="13sp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:text="/"
                    android:textColor="@color/dark_blue"
                    android:textSize="17sp" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    app:customFont="SEMIBOLD"
                    android:id="@+id/yearTextView"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_selector"
                    android:gravity="left|center"
                    android:hint="YYYY"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/text_hint" />
            </LinearLayout>


            <com.vallverk.handyboy.view.base.TextViewPlus
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="21dp"
                android:text="@string/whats_your_cell_number"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                app:customFont="SEMIBOLD" />

            <com.vallverk.handyboy.view.base.EditTextPlus
                app:customFont="SEMIBOLD"
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/phone_edit_text_selector"
                android:digits="+1234567890"
                android:hint="@string/phone_number"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/text_hint"
                android:inputType="phone"
                android:maxLength="13"
                android:singleLine="true"
                android:textSize="13sp" />

            <com.vallverk.handyboy.view.base.TextViewPlus
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/yout_must_accept_our"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                app:customFont="SEMIBOLD" />

            <LinearLayout
                android:id="@+id/termsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/termsOfServicePrivacyPolicyCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_box_selector"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/termsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/terms_of_service_underline"
                    android:textColor="@color/dark_blue"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/and"
                    android:textColor="@color/dark_blue"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/privacyPolicyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/privacy_policy_underline"
                    android:textColor="@color/dark_blue"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/servicesContractCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/check_box_selector"
                    android:paddingLeft="@dimen/padding_checkbox"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/contractTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/contract_underline"
                    android:textColor="@color/dark_blue"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="@string/mobile_verification_text"
                android:textColor="@color/dark_blue"
                android:textSize="9sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="34dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/codeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_your_code_here"
                        android:textColor="@color/dark_blue"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/codeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/edit_text_selector"
                        android:ems="10"
                        android:hint="@string/code"
                        android:inputType="phone"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.vallverk.handyboy.view.base.ButtonPlus
                    app:customFont="EXTRA_BOLD"
                    android:id="@+id/phoneVerificationButton"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/phone_verification_selector"
                    android:text="@string/send_phone_verification"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>