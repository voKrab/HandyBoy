<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbarContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/red" >

        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@drawable/swipe_menu_icon_light" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/temp"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imageSettingsLayout"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/first_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/firstEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                        android:ems="10"
                        android:hint="@string/first"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/last_name"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <EditText
                        android:id="@+id/lastEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                        android:ems="10"
                        android:hint="@string/last"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="@string/youtube_link"
                        android:textColor="@color/dark_blue"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/youTubeLinkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:background="@drawable/edit_text_selector"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_-"
                        android:ems="10"
                        android:hint="@string/http"
                        android:inputType="text"
                        android:gravity="center_vertical"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imageSettingsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/linearLayout1"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="98dp"
                        android:layout_height="98dp" >

                        <com.vallverk.handyboy.view.base.DownloadableImageView
                            android:id="@+id/avatarImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/edit_icon_light_small" />
                    </FrameLayout>

                    <GridLayout
                        android:id="@+id/addPhotosGridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal" >
                    </GridLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/feet"
                    android:textColor="@color/dark_blue"
                    android:textSize="9sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                        android:id="@+id/feetSpinner"
                        android:layout_width="79dp"
                        android:layout_height="29dp"
                        android:background="@drawable/spinner_selector" />

                    <TextView
                        android:id="@+id/feetTextView"
                        android:layout_width="50dp"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_white_background_selector"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/inches"
                    android:textColor="@color/dark_blue"
                    android:textSize="9sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                        android:id="@+id/inchesSpinner"
                        android:layout_width="79dp"
                        android:layout_height="29dp"
                        android:background="@drawable/spinner_selector" />

                    <TextView
                        android:id="@+id/inchesTextView"
                        android:layout_width="50dp"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_white_background_selector"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="@color/dark_blue"
                        android:textColorHint="@color/text_hint"
                        android:textSize="13sp" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/weight"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                android:id="@+id/weightSpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/hair_color"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                android:id="@+id/hairColorSpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/spinner_selector" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/eye_color"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                android:id="@+id/eyeColorSpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/spinner_selector" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/body_type"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.MultiChoiceSpinner
                android:id="@+id/bodyTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/spinner_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/sexuality"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.SingleChoiceSpinner
                android:id="@+id/sexualitySpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/spinner_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/ethentity"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <com.vallverk.handyboy.view.base.MultiChoiceSpinner
                android:id="@+id/ethentitySpinner"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/spinner_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/location"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <AutoCompleteTextView
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@drawable/edit_text_selector"
                android:ems="10"
                android:hint="@string/location"
                android:inputType="text"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/introduce_youself"
                android:textColor="@color/dark_blue"
                android:textSize="9sp" />

            <EditText
                android:id="@+id/introduceYouselfEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_selector"
                android:gravity="top"
                android:hint="@string/describe_your_services_hint"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingBottom="5dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="5dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/text_hint"
                android:textSize="13sp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/save_information_selector"
                android:gravity="center"
                android:text="@string/save_information"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>