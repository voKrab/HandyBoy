<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbarContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/red" >

        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/available_now"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:padding="8dp"
            android:src="@drawable/back_icon_topbar" />

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backImageView"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titleAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="22dp"
                android:text="@string/are_you_available_now"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/subTitleAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/by_clicking_accept_you_agree_to"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/line1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/dark_blue_circle"
                android:drawablePadding="8dp"
                android:text="@string/be_on_call_for_the_next_3_hours"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/line2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/dark_blue_circle"
                android:drawablePadding="8dp"
                android:text="@string/respond_to_inquiries_within_10_minutes_ideally_in_5"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/line3TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/dark_blue_circle"
                android:drawablePadding="8dp"
                android:text="@string/be_on_call_for_the_next_3_hours"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/line4TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/discount_your_services"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="21sp" />

            <SeekBar
                android:id="@+id/discountSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb_selector" />

            <TextView
                android:id="@+id/discountPersent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="@color/dark_blue_pressed"
                android:textSize="27sp" />

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="221dp"
                android:layout_height="34dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/dark_blue_shape_selector"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Button
                android:id="@+id/registrationButton"
                android:layout_width="160dp"
                android:layout_height="34dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/red_rect"
                android:text="@string/learn_more"
                android:textColor="@color/red"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>