<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbarContainer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/red" >

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:padding="8dp"
            android:src="@drawable/back_icon_topbar" />

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backImageView"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/leave_tip"
            android:textColor="@color/white"
            android:textSize="21sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tipsEditText"
            android:layout_width="235dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="57dp"
            android:background="@drawable/edit_text_selector"
            android:hint="$0.00"
            android:inputType="number"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/text_hint"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/leaveButton"
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/red_shape_selector"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="15dp"
            android:text="@string/leave"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>