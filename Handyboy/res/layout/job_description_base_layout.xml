<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
    android:id="@+id/detailsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical" >

    <com.vallverk.handyboy.view.jobdescription.DistancePriceView
        android:id="@+id/distancePriceView"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.vallverk.handyboy.view.jobdescription.DistancePriceView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="34dp"
        android:text="@string/describe_your_services"
        android:textColor="@color/dark_blue"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignRight="@+id/priceSeekBar"
        android:layout_below="@+id/textView11"
        android:background="@drawable/edit_text_selector"
        android:ems="10"
        android:gravity="top|left"
        android:hint="@string/describe_your_services_hint"
        android:padding="8dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/grey"
        android:textSize="11sp" />

    <com.vallverk.handyboy.view.jobdescription.JobLevelView
        android:id="@+id/jobLevelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp" >
    </com.vallverk.handyboy.view.jobdescription.JobLevelView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="21dp"
        android:text="@string/detail_your_experience_with_this_work"
        android:textColor="@color/dark_blue"
        android:textSize="13sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/experienceEditText"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignRight="@+id/priceSeekBar"
        android:layout_below="@+id/textView11"
        android:background="@drawable/edit_text_selector"
        android:ems="10"
        android:gravity="top|left"
        android:hint="@string/this_will_not_appear_on_your_profile"
        android:padding="8dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/grey"
        android:textSize="11sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_below="@+id/descriptionEditText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@drawable/dark_blue_shape_selector"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nextButton"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>