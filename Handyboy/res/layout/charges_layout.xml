<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:padding="8dp"
                android:src="@drawable/back_icon_topbar" />

            <TextView
                android:id="@+id/backTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_red" >
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="78dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/myAvatarImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                    <ImageView
                        android:id="@+id/handyBoyAvatarImage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gigTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:shadowColor="@color/dialog_background"
                    android:shadowDy="6"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/gigStatusTextView"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/green"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.vallverk.handyboy.view.base.TextViewPlus
                        xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                        android:id="@+id/gigIdTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="25dp"
                        android:textColor="@color/dark_blue"
                        android:textSize="8sp"
                        app:customFont="REGULAR" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:id="@+id/hbNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Tommy P"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"
                    app:customFont="BOLD" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/has_asked"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />
            </LinearLayout>

            <com.vallverk.handyboy.view.base.TextViewPlus
                xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="@string/addition_charges"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:customFont="BOLD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="To you"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:id="@+id/bookingNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Personal Training Gig"
                    android:textColor="@color/dark_blue"
                    android:textSize="21sp"
                    app:customFont="LIGHT" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="On"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:id="@+id/bookingAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Saturday, April 18"
                    android:textColor="@color/dark_blue"
                    android:textSize="21sp"
                    app:customFont="LIGHT" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Additional charge:"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:id="@+id/bookingPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="$18"
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"
                    app:customFont="BOLD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal" >

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="5dp"
                    android:text="For:"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />

                <com.vallverk.handyboy.view.base.TextViewPlus
                    xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                    android:id="@+id/additionalDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Text Text Text Text Text Text Text Text Text TextTextTextText Text Text Text TextText TextTextTextTextTextTextTextText v vv Text TextTextTextText  TextText"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp"
                    app:customFont="REGULAR" />
            </LinearLayout>

            <com.vallverk.handyboy.view.base.TextViewPlus
                xmlns:app="http://schemas.android.com/apk/res/com.vallverk.handyboy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/new_total"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:customFont="BOLD" />

            <FrameLayout
                  android:layout_width="240dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/acceptButton"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dark_blue_shape_selector"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/totalprice_binder"
                    android:gravity="center"
                    android:text="$75.00"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/cancelButton"
                android:layout_width="221dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/red_shape_selector"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>