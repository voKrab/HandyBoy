<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00000000" />
            <stroke android:width="1.5dp" android:color="@color/dark_blue"></stroke>
        </shape> <!-- pressed -->
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#00000000" />
            <stroke android:width="1.5dp" android:color="@color/dark_blue"></stroke>
        </shape> <!-- pressed -->
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" />
            <stroke android:width="1.5dp" android:color="@color/text_hint"></stroke>
        </shape> <!-- pressed -->
    </item>
</selector>